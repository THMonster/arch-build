# Maintainer: Megumi_fox <i@megumifox.com>

pkgname=qliveplayer-git
pkgver=5.0.0.r6.g1017295
pkgrel=1
pkgdesc='Cute and useful Live Stream Player with danmaku support.'
arch=('x86_64')
url="https://github.com/THMonster/QLivePlayer"
license=('GPL2')
provides=('revda')
conflicts=('revda')
depends=('mpv' 
         'ffmpeg'
         'webkit2gtk'
         )
makedepends=('cmake'
             'git'
             'rust'
             'ninja'
             'yarn'
             'extra-cmake-modules' )

source=(
    "QLivePlayer::git+https://github.com/THMonster/QLivePlayer.git#branch=developing"
    "QLivePlayer-Lib::git+https://github.com/THMonster/QLivePlayer-Lib.git#branch=dev"
)

pkgver() {
    cd QLivePlayer
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

sha256sums=(
            'SKIP'
            'SKIP'
)

build() {
	git clone -b tauri https://github.com/THMonster/QLivePlayer.git --recursive qqq
	cd qqq
	mkdir build
	cd ./build
	cmake -GNinja -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_LIBDIR=lib ..
	ninja
}

package() {
    cd $srcdir/qqq/build
    DESTDIR="$pkgdir" ninja install
}
