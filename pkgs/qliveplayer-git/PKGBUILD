# Maintainer: Megumi_fox <i@megumifox.com>

pkgname=qliveplayer-git
pkgver=4.0.0.r6.g1017295
pkgrel=1
pkgdesc='Cute and useful Live Stream Player with danmaku support.'
arch=('x86_64')
url="https://github.com/IsoaSFlus/QLivePlayer"
license=('GPL2')
provides=('qliveplayer')
conflicts=('qliveplayer')
depends=('mpv' 
         'ffmpeg'
         'openssl'
         'openssl-1.0'
         'qt5-base'
         'qt5-quickcontrols2'
         'qt5-graphicaleffects'
         'qt5-quickcontrols'
         'python')
makedepends=('cmake'
             'git'
             'rust'
             'ninja'
             'extra-cmake-modules' )

source=(
    "QLivePlayer::git+https://github.com/IsoaSFlus/QLivePlayer.git#branch=developing"
    "QLivePlayer-Lib::git+https://github.com/IsoaSFlus/QLivePlayer-Lib.git#branch=dev"
)

pkgver() {
    cd QLivePlayer
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

sha256sums=(
            'SKIP'
            'SKIP'
)

build() {
    pkg-config --libs openssl
    cd $srcdir/QLivePlayer
    cp $srcdir/QLivePlayer-Lib $srcdir/QLivePlayer/src/ -rf
    mkdir -p build
    cd build
    cmake  -DCMAKE_BUILD_TYPE=Release ..
    #cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_LIBDIR=lib ..
    make -j4 
}

package() {
    cd $srcdir/QLivePlayer/build
    DESTDIR="$pkgdir" make install
}
